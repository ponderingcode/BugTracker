@model BugTracker.Models.Tickets
@using BugTracker.Models
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    @foreach (TicketAttachments ticketAttachment in Model.TicketAttachments)
    {
        <img class="img-responsive" src="@ticketAttachment.FileURL"/>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            Project
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt>
            Priority
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TicketPriority.Name)
        </dd>
        <dt>
            Status
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TicketStatus.Name)
        </dd>
        <dt>
            Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TicketType.Name)
        </dd>
        <dt>
            Assignee
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssignedToUser.FullName)
        </dd>
        <dt>
            Owner
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OwnerUser.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
        @if (null != Model.Updated)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Updated)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Updated)
            </dd>
        }
    </dl>
    @Html.Partial("_TicketHistory", Model.Histories)
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

