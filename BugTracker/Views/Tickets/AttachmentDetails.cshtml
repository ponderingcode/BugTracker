@model BugTracker.Models.TicketAttachmentViewModel
@{
    ViewBag.Title = Model.Title;
}
<div class="row">
    <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="well bs-component col-md-6">
            <fieldset>
                <legend>@Model.Title</legend>
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <img class="img-responsive" src="@Model.MediaSource">
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 modal-footer well-footer">
                        <a href="@Url.Action(ActionName.DETAILS, ControllerName.TICKETS, new { id = Model.TicketId, activeTab = 3 })" class="btn btn-info">Done</a>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>