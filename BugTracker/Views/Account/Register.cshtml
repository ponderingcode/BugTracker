<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="@Url.Action(Common.INDEX, ControllerName.HOME)">
            <img src="~/metronic_4.7/assets/layouts/layout/img/btLogo.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="content">
            <!-- BEGIN REGISTRATION FORM -->
            <h3 class="font-green">Register</h3>
            <p class="hint"> Enter your personal details below: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">First Name</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="First Name" name="FirstName" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Last Name</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Last Name" name="LastName" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Display Name</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Display Name" name="DisplayName" />
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Email" name="Email" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Password" name="Password" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Re-type Your Password" name="ConfirmPassword" />
            </div>
            <div class="form-actions">
                <a id="register-back-btn" class="btn green btn-outline" href="@Url.Action(Common.INDEX, ControllerName.HOME)">Cancel</a>
                <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
            </div>
            <div class="create-account">
               
            </div>
        </div>
    }
        <!-- END REGISTRATION FORM -->
            <div class="copyright"> 2016 © Ryan Fleming </div>
            <!--[if lt IE 9]>
            <script src="~/metronic_4.7/assets/global/plugins/respond.min.js"></script>
