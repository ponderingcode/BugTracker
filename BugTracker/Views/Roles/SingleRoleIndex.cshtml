@model IEnumerable<BugTracker.Models.RoleViewModel>

@{
    ViewBag.Title = "Single Role Index";
}

<script src="~/Dependencies/jQuery/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="~/Dependencies/dataTables/DataTables-1.10.12.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function() {
        $('#tblSingleRole').DataTable();
    });
</script>

<h2>@ViewBag.roleName</h2>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            <table id="tblSingleRole" class="table stripe row-border compact">
                <thead>
                    <tr>
                        <th>
                            @ViewBag.roleName
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.usersInRole)
                    {
                        <tr>
                            <td>
                                @user.Email
                            </td>
                        </tr>
                    }
                </tbody>
                @Html.ActionLink("Back to List", "Index")
            </table>
        </div>
        <div class="col-md-9"></div>
    </div>
</div>