@model IEnumerable<BugTracker.Models.RoleViewModel>

@{
    ViewBag.Title = @ViewBag.roleName;
}

<script src="~/Dependencies/jQuery/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="~/Dependencies/dataTables/DataTables-1.10.12.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function() {
        $('#tblSingleRole').DataTable();
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="well bs-component col-md-6">
            <legend>@ViewBag.roleName</legend>
            <table id="tblSingleRole" class="table stripe row-border compact">
                <thead>
                    <tr>
                        <th>
                            @ViewBag.roleName
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.usersInRole)
                    {
                        <tr>
                            <td>
                                @user.Email
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <div class="col-md-12 modal-footer well-footer">
                    <a href="@Url.Action(ActionName.INDEX, ControllerName.ROLES)" class="btn btn-info">Done</a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>