<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BugTracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Dependencies/dataTables/DataTablesCustom.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Dependencies/jQuery/jquery-2.2.4.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BugTracker", ActionName.INDEX, ControllerName.HOME, new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(ControllerName.HOME, ActionName.INDEX, ControllerName.HOME)</li>
                    <li>@Html.ActionLink(ControllerName.PROJECTS, ActionName.INDEX, ControllerName.PROJECTS)</li>
                    <li>@Html.ActionLink(ControllerName.TICKETS, ActionName.INDEX, ControllerName.TICKETS)</li>
                    <li>@Html.ActionLink(ControllerName.ROLES, ActionName.INDEX, ControllerName.ROLES)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 65px;">
        @RenderBody()
    </div>
    <div class="container">
        <hr style="width:100%"/>
        <footer>
            <p>&copy; @DateTime.Now.Year - BugTracker</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>